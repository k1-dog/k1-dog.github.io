{
  "allowImportingTsExtensions": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "module": "ESNext",
    "rootDir": ".",
    "outDir": "./m9-d-ts",
    // "paths": { "@/*": ["src/*"] },
    "types": ["node", "vite/client"], // "module"
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitAny": false, // 是否在表达式和声明上有隐含的any类型时报错
    "lib": ["esnext", "dom"]
  },
  "include": [
    "docs",
    "./miku-types/**/*.d.ts",
    // "./docs/components/**/*.tsx",
    // "./docs/components/**/*.vue",
  ],
  "exclude": ["node_modules"]
}
